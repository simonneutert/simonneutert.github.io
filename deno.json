{
  "tasks": {
    "dev": {
      "command": "deno fmt",
      "dependencies": [
        "dev-watch",
        "serve",
        "polish"
      ]
    },
    "new-post": "deno run --allow-env --allow-write --allow-read main.ts new-post",
    "dev-watch": "deno run --allow-read --allow-write --allow-env --watch main.ts",
    "polish": "deno fmt --watch && deno lint --watch && deno check --watch",
    "serve": "deno run --allow-net --allow-read jsr:@std/http/file-server dist/ -p 8080",
    "publish-blog": "deno run --allow-env --allow-write --allow-read main.ts"
  },
  "compilerOptions": {
    "jsx": "precompile",
    "jsxImportSource": "preact"
  },
  "imports": {
    "@std/toml": "jsr:@std/toml@^1.0.11",
    "@std/yaml": "jsr:@std/yaml@^1.0.11",
    "preact": "npm:preact",
    "preact-render-to-string": "npm:preact-render-to-string",
    "@deno/gfm": "jsr:@deno/gfm@^0.11.0",
    "@std/assert": "jsr:@std/assert@1",
    "@std/front-matter": "jsr:@std/front-matter@^1.0.9",
    "prismjs": "npm:prismjs@1.30.0"
  }
}
